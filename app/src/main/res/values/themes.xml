<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyWeatherAppMVPKotlin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Base colors-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <!--Style attributes-->

        <!--Params-->

        <!--Component styles-->
        <item name="materialButtonStyle">@style/navButton</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
    </style>

    <!--Style for navigation button-->
    <style name="navButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@android:color/black</item>
        <item name="iconSize">35dp</item>
    </style>

    <!--Style for TextInputLayout-->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>
</resources>